.riaswEditor {
	display: block;
	position: relative;
	background-color: $editor-background-color;
	border: 1px solid $editor-border-color;
	border-radius: $editor-border-radius;

	.riaswEditorHeader {
		//position: absolute;
		//top: 0px;
		//left: 0px;
		//right: 0px;
		border-bottom: 1px solid $editor-border-color;
	}
	.riaswEditorFooter {
		position: absolute;
		bottom: 0px;
		left: 0px;
		right: 0px;
		border-top: 1px solid $editor-border-color;
	}
	.riaswEditorContainer {
		background-color: $editor-input-color;
		border: 1px solid $editor-input-border-color;///需要占位
		//border-top: 1px solid $editor-border-color;
		//border-bottom: 1px solid $editor-border-color;
		color: $editor-input-text-color;
		padding: $editor-input-padding;
		transition: border 0.2s linear 0s;
	}
}

.riaswEditorHover {
	.riaswEditorContainer {
		border-color: $theme-hover-border-color;
		transition-duration: .25s;
		_textbox_shadow($theme-hover-border-color);

		.riaswEditorIFrame {
