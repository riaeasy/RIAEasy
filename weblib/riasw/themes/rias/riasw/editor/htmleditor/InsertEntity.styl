.riaswEditorIconInsertEntity {
	/* icon in toolbar for this plugin */
	background-image: url(join("/", $path-riasw-editor, "htmleditor/images/insertEntity.gif"));
	background-repeat: no-repeat;
	background-position: center center;
	width: 18px;
	height: 18px;
}

.riaswDisabled .riaswEditorIconInsertEntity {
	/* icon in toolbar for this plugin, when the plugin is disabled */
	background-image: url(join("/", $path-riasw-editor, "htmleditor/images/insertEntityDisabled.gif"));
}

.riaswEditorEntityPalette {
	/* outer node of the dropdown */
	border: 1px solid #999;
	background: #fff;
	//-moz-border-radius: 3pt;
}

.riaswEditorEntityPaletteCell {
	/* individual cell of the drop down */
	border: 1px dotted gray;
	width: 20px;	/* todo: don't hardcode width/height; it's neither necessary nor a11y safe */
	line-height: 18px;
	overflow: hidden;
	z-index: 10;
	text-align: center;
}
.riaswEditorEntityPaletteCell:hover, .riaswEditorEntityPaletteCell:active, .riaswEditorEntityPaletteCell:focus {
	width: 18px;
    line-height: 16px;
	overflow: hidden;
	cursor: default;
	border:1px dashed #000;
	outline:1px dashed #dedede;
}


.riaswEditorEntityPalettePreviewTable {
	table-layout: auto;
	font-size: 1em;
	width: 100%;
}

.riaswEditorEntityPalettePreviewHeader {
	font-size: .8em;
	padding: 3px 3px 3px 3px;
}

.riaswEditorEntityPalettePreviewDetailEntity {
	font-size: 3em;
	font-weight: bold;
	width: 1em;
	text-align: center;
}

.riaswEditorEntityPalettePreviewDetail {
	font-size: 1em;
	vertical-align: middle;
	font-weight: bold;
	padding: 3px 3px 3px 3px;
}

.dijit_a11y .riaswEditorEntityPaletteCell {
	background-color:transparent !important;
}
