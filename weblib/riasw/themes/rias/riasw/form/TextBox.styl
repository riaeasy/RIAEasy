.riaswValidationContainer {
	display: none;
	//position: absolute;
	overflow: hidden;
	float: right;
	cursor: default;
	color: $theme-error-color;
	height: 100%;
	width: $textbox-validation-width;
	//top: 0px;
	//right: 0px;// 1.25em;
	&:before {
		content: "";
	}
}
/*.riaswTextBoxError .riaswTextBoxContainer,
.riaswTextBoxError .riaswButton {
	border-color: $theme-error-color;
	transition-duration: .25s;
	box-shadow: 0em 0em 0.25em 0.1em $theme-error-color inset;
	background-color: #ffffbb;
	background-image:none;
}*/
.riaswValidationTextBoxError {
	.riaswValidationContainer {
		display: block;
		&:before {
			display: block;
			_icon-core-style();
			content: $icon-error;
		}
	}
	.riaswTextBoxContainer {
		//border-color: red;
		border-color: $theme-error-color;
		background-color: $theme-error-background-color;
		background-image: none;
		//padding-right: $textbox-validation-width;///需要适配 riaswValidationContainer
		transition-duration: .25s;
		_textbox_shadow($theme-error-color);
	}
}

.riaswComboBoxHighlightMatch {
