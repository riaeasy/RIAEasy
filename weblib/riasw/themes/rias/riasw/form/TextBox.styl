/// Text Inputs: [TextBox | DateTextBox | CurrencyTextBox | ValidationTextBox | ...] | TextArea

@import '../../variables';

.riaswTextBox,
.riaswTextArea,
.riaswSelect {
	box-sizing: border-box;
	display: inline-block;
	vertical-align: middle;
	position: relative;
	//border: 1px solid transparent;
	//overflow: hidden;
	line-height: $textbox-line-height;
	//height: 2em;
	width: 20em;	/* need to set default size on outer node since inner nodes say <input style="width:100%"> and <td width=100%>.  user can override */
}
.riaswTextArea {
	height: 5em;
}
.riaswSelect {
	button-style();
	table-layout: fixed;
}

.riaswExpandingTextArea {
	resize: none;
}

//.riaswTimeTextBox {
//	width: 8em;
//}

.riaswTextBox *,
.riaswTextArea *,
.riaswSelect * {
	//vertical-align: middle;
	//font: inherit;
}

.riaswTextBoxLabel {
	box-sizing: border-box;
	display: block;
	position: relative;
	overflow: hidden;
	float: left;
	text-align: right;
	height: 100%;
	//width: 0px;
}

.riaswTextBoxContainer {
	box-sizing: border-box;
	display: block;
	position: relative;
	overflow: hidden;
	float: none;
	background: $textbox-color;
	border-width: 1px;
	border-style: solid;
	border-color: $textbox-border-color;
	border-radius: $textbox-border-radius;
	color: $textbox-text-color;
	transition: border 0.2s linear 0s, box-shadow 0.2s linear 0s;
	padding: 0;
	margin:0;
	height: 100%;
}

.riaswTextArea {
	.riaswTextBoxContainer {
		//width:100%;
		/*overflow-y: auto;*/	/* w/out this IE's SimpleTextArea goes to overflow: scroll */
		//overflow: auto;
	}
	.riaswTextBoxContainer[cols] {
		width:auto; /* SimpleTextArea cols */
	}
	.riaswInputInner {
		overflow: auto;
		line-height: normal;
		//width: auto;
		//white-space: nowrap;
	}
}
.dj_ie .riaswTextAreaCols .riaswTextBoxContainer {
	width:auto;
}

//.riaswTimeTextBox .riaswTextBoxContainer {
//	width: 8em;
//}
.riaswInputContainer {
	box-sizing: border-box;
	display: block;
	position: relative;
	overflow: hidden;
	float: none;
	background: none;
	border: none;
	padding: 0;
	margin: 0;
	height: 100%;
	box-shadow: none;
}
.riaswInputInner {
	box-sizing: border-box;
	display: block;
	position: relative;
	overflow: hidden;
	float: none;
	background-color: transparent;
	border: 0;
	font: inherit;
	font-weight: bold;
	resize: none;
	padding: 0 $textbox-input-padding;
	margin: 0;
	width: 100%;
	height: 100%;
	box-shadow: none;
}
.riaswCurrencyTextBox,
.riaswNumberTextBox {
	.riaswTextBoxContainer {
		text-align: right;
		direction: ltr;
	}
	.riaswInputInner {
		text-align: right;
	}
}

// hover
.riaswTextBoxHover {
	.riaswTextBoxContainer {
		border-color: $theme-hover-border-color;
		transition-duration: .25s;
		_textbox_shadow($theme-hover-border-color);
	}
}
// focused
// active
.riaswTextBoxFocused,
.riaswTextBoxActive {
	.riaswTextBoxContainer {
		border-color: $theme-active-border-color;
		transition-duration: .25s;
		_textbox_shadow($theme-active-border-color);
	}
}


