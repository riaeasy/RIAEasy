// hover
.riaswSwitchHover {
	.riaswSwitchBg,
	.riaswSwitchKnob {
		border-color: $theme-hover-border-color;
		transition-duration: .25s;
		_textbox_shadow($theme-hover-border-color);
	}
}
// focus
// active
.riaswSwitchFocused,
.riaswSwitchActive {
	.riaswSwitchBg,
	.riaswSwitchKnob {
		border-color: $theme-active-border-color;
		transition-duration: .25s;
		_textbox_shadow($theme-active-border-color);
	}
}

// read only
.riaswSwitchReadOnly {
	cursor: default;
	.riaswSwitchBg {
		border-color: $theme-disabled-border-color;
	}
	.riaswSwitchKnob {
		background-image: none;
		background-color: $theme-disabled-background-color;
		border-color: $theme-disabled-border-color;//$theme-disabled-text-color-1;
	}
}
// disabled
.riaswSwitchDisabled {
	disabled-grayscale();
	filter: "progid:DXImageTransform.Microsoft.BasicImage(Grayscale=1)";
	filter: grayscale(100%);
	cursor: default;

	//.riaswSwitchBg,
	.riaswSwitchKnob {
		background-image: none;
		background-color: $theme-disabled-background-color;
		//border-color: $theme-disabled-border-color;//$theme-disabled-text-color-1;
	}
}


