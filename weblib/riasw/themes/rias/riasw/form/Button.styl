/// riaswCheckBox
//.riaswCheckBoxInput,
.riaswCheckMenuItem .riaswCheckMenuItemIcon,
.riaswRadioMenuItem .riaswCheckMenuItemIcon,
.riaswRadioBox,
.riaswCheckBox {
	//box-sizing: border-box;//不便于 before/after 定位
	display: inline-block;
	vertical-align: middle;
	position: relative;
	text-align: center;
	overflow: hidden;
	background-color: $theme-input-color;
	background-image: none;///需要清空 background-image，避免有 image 叠加
	background-position:center center;
	background-repeat:no-repeat;
	border: 1px solid $theme-border-color;
	border-radius: $icon-size * 0.125;
	width: $icon-size;
	height: $icon-size;
	line-height: normal;
	padding: 0;
	//cursor: pointer;
	transition: all 0.1s linear;
	input {
		position: absolute;
		top: 0;
	}
}
.riaswRadioMenuItem .riaswCheckMenuItemIcon,
.riaswRadioBox {
	background-color: $theme-input-color;
	border: 1px solid $theme-border-color;
	border-radius: 50%;
	padding: 0;
	width: $icon-size;
	height: $icon-size;
	&:after {
		display: block;
		position: absolute;
		content: " ";
		background-color: $theme-highlight-color;
		border-radius: 50%;
		top: 0;
		left: 0;
		width: 0;
		height: 0;
		margin: ($icon-size) * .5;
		opacity: 0;
		transition: all 0.15s ease-in-out;
	}
}
.riaswCheckBoxInput {
	/*overflow: hidden;
	background-position: center center;
	background-repeat: no-repeat;
	border: 0;
	width: $icon-size;
