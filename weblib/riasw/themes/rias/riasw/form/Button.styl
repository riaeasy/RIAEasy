	opacity: 0.01;*/
}

//.riaswCheckBoxIcon,
.riaswCheckMenuItemChecked .riaswCheckMenuItemIcon,
.riaswCheckBoxChecked {
	&:before {
		_icon-core-style();
		line-height: normal;
		content: $checkbox-icon;
		color: $theme-highlight-color;
	}
}
.riaswRadioMenuItemChecked .riaswCheckMenuItemIcon,
.riaswRadioBoxChecked {
	&:after {
		width: ($icon-size) * .5;
		height: @width;
		margin: ($icon-size) * .25;
		opacity: 1;
	}
}

