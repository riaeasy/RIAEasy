.riaswButtonHover,
.riaswArrowButtonHover {
	button-hover-style('$theme-hover');
}
.riaswButtonActive,
.riaswArrowButtonActive,
.riaswButtonFocused,
.riaswArrowButtonFocused {
	button-active-style('$theme-active');
}
.riaswButton {
	.riaswArrowButtonHover,
	.riaswArrowButtonActive,
	.riaswArrowButtonFocused {
		make-color($toolbutton-inner-hover-color, $toolbutton-inner-hover-border-color, $toolbutton-inner-hover-text-color);
	}
