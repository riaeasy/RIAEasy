	}
}
.riaswCheckButtonReadOnly,
.riaswRadioButtonReadOnly {
	border-color: transparent;
	background-color: transparent;
}
// disabled
.riaswButtonDisabled,
.riaswArrowButtonDisabled {
	disabled-grayscale();

	.riaswButtonIcon {
		filter: "progid:DXImageTransform.Microsoft.BasicImage(Grayscale=1)";
		filter: grayscale(100%);
	}
	.riaswArrowButtonContainer,
	.riaswSpinnerButtonContainer {
		display: none;
	}
}
.riaswCheckButtonDisabled,
.riaswRadioButtonDisabled {
	border-color: transparent;
	background-color: transparent;
}

