
/// Badge

@import '../../variables';

.riaswBadge {
	display: none;
	position: relative;
	vertical-align: middle;
	visibility: hidden;
	float: left;
	height: 1em;
	width: 1.25em;
}
.riaswBadge2 {
	width: 2em;
}
.riaswBadge3 {
	width: 2.75em;
}
.riaswBadgeMore {
	width: 3em;
}
.riaswBadgeVisible {
	display: inline-block;
	visibility: visible;
}
.riaswBadgeText {
	display: block;
	position: absolute;
	padding: 0px 0.25em;
	/*top: 0px;
	right: 0px;*/
	color: white;
	border: 2px solid white;
	border-radius: 1em;
	/*text-align: right;
	font-family: Helvetica;*/
	//font-size: 1em;
	font-weight: bold;
	text-align: center;
	background-clip: padding-box;
	_shadow($shadow-badge);
}
.riaswButton .riaswBadge {
	/*top: 0em;*/
}
.riaswButton .riaswBadgeText {
	//top: -0.25em;
}
.riaswCaptionPanelCaptionNode .riaswBadgeText,
.riaswFieldsetCaptionNode .riaswBadgeText,
.riaswDialogCaptionNode .riaswBadgeText {
	//top: -0.25em;
	//left: 0em;
}

.riaswBadgeRed {
	background: red;
	//background: -webkit-gradient(linear, left top, left bottom, from(#f56e6e), to(#ae0001), color-stop(0.5, #e44149), color-stop(0.5, #de151f));
	background: linear-gradient(to bottom, #f56e6e 0%, #e44149 50%, #de151f 50%, #ae0001 100%);
}
.riaswBadgeBlue {
	background: #0000ff;
	//background: -webkit-gradient(linear, left top, left bottom, from(#5b98e7), to(#216dd6), color-stop(0.5, #4282de), color-stop(0.5, #216dd6));
	background: linear-gradient(to bottom, #5b98e7 0%, #4282de 50%, #216dd6 50%, #216dd6 100%);
}
.riaswBadgeGreen {
	background: #008000;
	//background: -webkit-gradient(linear, left top, left bottom, from(#6cd74a), to(#398c08), color-stop(0.5, #6bc642), color-stop(0.5, #4aad21));
	background: linear-gradient(to bottom, #6cd74a 0%, #5ec63c 50%, #4aad21 50%, #398c08 100%);
}
.riaswBadgeYellow {
	background: darkorange;
	//background: -webkit-gradient(linear, left top, left bottom, from(#ffbc1c), to(#ff9000), color-stop(0.5, #FFA000), color-stop(0.5, #FFA000));
	background: linear-gradient(to bottom, #ffbc1c 0%, #FFA000 50%, #FFa000 50%, #ff9000 100%);
}
.riaswBadgeBlack {
	background: black;
	//background: -webkit-gradient(linear, left top, left bottom, from(#7f7f7f), to(#303030), color-stop(0.5, #303030), color-stop(0.5, #303030));
	background: linear-gradient(to bottom, #7f7f7f 0%, #303030 50%, #303030 50%, #303030 100%);
}
.riaswBadge > div > div {
	display: none;
}

