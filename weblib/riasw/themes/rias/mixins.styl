/* helpers */
// to calculate when the value is an even number or not

isEven($value) {
	if ($value % 2 == 0) {
		true;
	} else {
		false;
	}
}

// to take half of the given value
half($value) {
	$value / 2;
}


make-color($backgroundColor, $borderColor, $textColor){
	background-color: $backgroundColor if($backgroundColor);
	border-color: $borderColor if($borderColor);
	color: $textColor if($textColor);
}

