/* Button */

// common button style properties
button-style() {
	background-color: $button-color;
	border: 1px solid $button-border-color;
	border-radius: $button-border-radius;
	//line-height: $button-line-height;
	padding: $button-padding;
	cursor: pointer;
	transition: all 0.05s linear;
}

button-hover-style($name) {
	make-color(lookup($name + '-color'), lookup($name + '-border-color'), lookup($name + '-text-color'));
	transition: all 0.1s;
	//filter: "progid:DXImageTransform.Microsoft.Shadow(color='#aa555555', Direction=135, Strength=4)";
	box-shadow: $shadow-button;
}
button-active-style($name) {
	make-color(lookup($name + '-color'), lookup($name + '-border-color'), lookup($name + '-text-color'));
	transition: none;
	outline: none;
	//filter: "progid:DXImageTransform.Microsoft.Shadow(color='#aa555555', Direction=135, Strength=4)";
	box-shadow: $shadow-button;
}

disabled-grayscale() {
	cursor: default;
	color: $theme-disabled-text-color;
	border-color: $theme-disabled-border-color;
	background-color: transparent;
	opacity: $theme-disabled-opacity;
	//filter: "progid:DXImageTransform.Microsoft.BasicImage(Grayscale=1)";
	//filter: grayscale(100%);///会消隐 border
	box-shadow: none;
}

/// css3
transform($value) {
	-webkit-transform: $value;
	transform: $value;
}
transform-origin($value) {
	-webkit-transform-origin: $value;
	transform-origin: $value;
}
transform-style($value) {
	-webkit-transform-style: $value;
	// not supported in IE10
}
transition-property($value) {
	-webkit-transition-property: $value;
	transition-property: $value;
}
transition-property-2($value1, $value2) {
	-webkit-transition-property: $value1, $value2;
	transition-property: $value1, $value2;
}
transition-property-transform() {
	-webkit-transition-property: -webkit-transform;
	transition-property: transform;
}
transition-duration($value) {
	-webkit-transition-duration: $value;
	transition-duration: $value;
}
transition-delay($value) {
	-webkit-transition-delay: $value;
	transition-delay: $value;
}
transition-timing-function($value) {
	-webkit-transition-timing-function: $value;
	transition-timing-function: $value;
}
animation-name($value) {
	-webkit-animation-name: $value;
	animation-name: $value;
}
animation-duration($value) {
	-webkit-animation-duration: $value;
	animation-duration: $value;
}
animation-timing-function($value) {
	-webkit-animation-timing-function: $value;
	animation-timing-function: $value;
}
animation-iteration-count($value) {
	-webkit-animation-iteration-count: $value;
	animation-iteration-count: $value;
}
appearance($value) {
	-webkit-appearance: $value;
}
tap-highlight-color($value) {
	-webkit-tap-highlight-color: $value;
}
text-size-adjust($value) {
	-webkit-text-size-adjust: $value;
}
user-select($value) {
	-webkit-user-select: $value;
	-ms-user-select: $value;
}

