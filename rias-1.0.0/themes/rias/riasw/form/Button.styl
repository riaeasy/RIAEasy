}
.dijitDisabled .riaswLeftArrowButton .riaswArrowButtonInner {
	background-position: -177px 53%;
}
.dijitDisabled .riaswRightArrowButton .riaswArrowButtonInner {
	background-position: -126px 53%;
}
.dijitDisabled .riaswUpArrowButton .riaswArrowButtonInner {
	background-position: -100px 53%;
}


/* ----- ToggleButton ----- */
.riaswButtonNode {
	.dijitCheckBox {
		margin: 0 0.25em;
	}
}
.riaswToggleButton {
	.dijitCheckBoxIcon {
		display: none;
	}
}

.riaswCheckButton,
.riaswRadioButton {
	border-width: 0px;
	background-color: inherit;
}
.riaswButtonNodeReadOnly {
	.dijitCheckBox,
	.dijitRadio {
		background-color: inherit;
	}
}
.riaswCheckButtonDisabled,
.riaswRadioButtonDisabled {
	background-color: inherit;
	//-webkit-box-shadow: 0 0 0 rgba(0, 0, 0, 0);
	//-moz-box-shadow: 0 0 0 rgba(0, 0, 0, 0);
	box-shadow: 0 0 0 rgba(0, 0, 0, 0);
	opacity: $disabled-opacity;
	//-webkit-filter: grayscale(1);
	//-ms-filter: grayscale(1);
	filter: grayscale(1);
}

/* Rtl */

.riaswButtonNodeRtl,
.riaswArrowButtonRtl {
	padding-left: $padding*2;
}
table.riaswComboButtonRtl .dijitStretch  {
	border-radius: 0 $button-border-radius $button-border-radius 0;
}
table.riaswComboButtonRtl .riaswArrowButton {
	border-radius: $button-border-radius 0 0 $button-border-radius;
	border-left-width: 1px;
	border-right-width: 0;
}
