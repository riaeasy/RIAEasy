/* ----- ComboButton ----- */
.riaswComboButton .riaswArrowButtonFocused,
.riaswComboButton .riaswArrowButtonHover {
	background-color: gold;
}
table.riaswComboButton {
	border-collapse: separate;	/* override dijit.css so that ComboBox rounded corners work */
	.dijitStretch {
		border-radius: $border-radius 0 0 $border-radius;
	}
	.riaswArrowButton {
		padding: $padding;
		width: $button-arrow-width;
		border-radius: 0 $border-radius $border-radius 0;
		border-left-width: 0;
	}
}

// arrow styles for down/up/left/right directions
.riaswArrowButtonInner {
	display: inline-block;
	width: 16px;
	height: 100%;
	margin: 0 auto;
	border: 0;
	cursor: pointer;
	background-color: inherit;
	background-image: url("./images/buttonArrows.png");
	background-repeat: no-repeat;
	/*background-position: -51px 53%;*/

	line-height: $icon-size;

	.dijitInputField {
		padding: 0;
	}
}

