.riaswButtonIcon {
	background: url('./images/CaptionPanelBtn.png') no-repeat -52px center;
	width: 16px;
	height: 16px;
	overflow: hidden;
	/*float: left;*/
	margin: 1px 4px 1px 0px;
}
.riaswButtonText {
	padding: 0 $padding;
	text-align: center;
}

.riaswButtonGutter {
	border: 0 !important;
	padding: 0 !important;
	margin: 0 !important;
	color: silver !important;
}

.riaswBusyButtonIcon {
	width: 10px;
	height: 10px;
	vertical-align: middle;
	margin-left: 4px;
	background-image: url('./images/loading_wheel.gif');
	background-repeat: no-repeat;
}

.riaswArrowButton {
	button-style();
	//background-color: inherit;
	border-radius: 0;
	border-width: 0;
	width: auto;
	overflow: hidden;
	padding: 0 2px;//$numberspinner-button-padding;
	margin: 0;
	position: relative;// !important;
	float: none;
	height: 100%;
	top: 0;
	left: 0;
	//bottom: auto;
	//right: auto;
	//border-radius: 0;
	&:before {
		content: none; // remove arrow icons from riaswArrowButton nodes
	}
}

.riaswSpinner {

	/* up button */
	.riaswUpArrowButton {
		//left: 0;
		//top: 0;
		border-width: 0 1px 0 0;
		border-top-right-radius: $numberspinner-button-border-radius
	}
	/* down button */
	.riaswDownArrowButton {
		//top: 0;
		//left: 1em;
		border-bottom-right-radius: $numberspinner-button-border-radius
	}

}

// hover
.riaswButtonNodeHover,
.riaswArrowButtonHover {
	button-hover-style();
}

/* focused status */
.riaswButtonNodeFocused,
.riaswArrowButtonFocused {
	button-active-style();
}

// active and checked
.riaswButtonNodeActive,
.riaswArrowButtonActive {
	button-active-style();
}

// disabled
.riaswButtonNodeDisabled,
.riaswArrowButtonDisabled {
	button-disabled-style();
	//background-color: inherit;
	background-image: none;
	//outline: none;
	color: inherit;
	//-webkit-box-shadow: 0 0 0 rgba(0, 0, 0, 0);
	//-moz-box-shadow: 0 0 0 rgba(0, 0, 0, 0);
	box-shadow: 0 0 0 rgba(0, 0, 0, 0);
	opacity: $disabled-opacity;
	//-webkit-filter: grayscale(1);
	//-ms-filter: grayscale(1);
	filter: grayscale(1);
}

.riaswComboButtonDisabled .riaswArrowButton {
	border-left-width: 0;
}

