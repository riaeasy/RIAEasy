.dj_ie6 .riaswArrowButtonInner {
	background-image: url("../images/spriteArrows.gif");
}
.dj_ie .riaswSpinner .riaswUpArrowButton .riaswArrowButtonInner {
	margin-top: 1px; /* image has too many blank pixels on top */
}
