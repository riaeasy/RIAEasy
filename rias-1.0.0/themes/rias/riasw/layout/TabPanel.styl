/* Rtl */
.riaswTabControllerRtl,
.riaswTabControllerRtl .nowrapTabStrip {
	text-align: right;
}

.dijitTabRtl{
	.riaswTabCloseButton {
		margin-left: 0;
		margin-right: $tab-padding;
	}
}

.dijitRtl {

	.riaswTab {
		margin-right:0;
		margin-left:2px;		/* space between one tab and the next in top/bottom mode */
	}

	/* tab strips */
	.riaswTabPanel .riaswTabStripButton {
		//margin-left: 0;
	}

	.riaswTabPanelTopStrip,
	.riaswTabPanelBottomStrip,
	.riaswTabController-top,
	.riaswTabController-bottom {
		padding-left: 0;
		padding-right: 3px;
	}

	.riaswTabInnerDiv {
		padding-left: 3px;
		padding-right: 4px;
	}

	.riaswTabPanelContainer {
		//zoom: 1;
	}

	.riaswTabController-left .riaswTab,
	.riaswTabController-right .riaswTab {
		margin-left:0;
	}

}

.dj_ie-rtl {
	.riaswTabController-left {
		margin-left: 0 !important;
	}
	.riaswTabController-right {
		margin-right: 0 !important;
	}
	.riaswTab .riaswTabInnerDiv{
		width : 1%;
	}
}
