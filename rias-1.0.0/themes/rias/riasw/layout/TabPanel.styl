/**
 * rias.riasw.layout.TabPanel
 */

/* Classes for all types of tabs (top/bottom/left/right) */

@import 'layout_variables';

.riaswTabPanel {
	position: relative;
	z-index: 0;
	overflow: hidden;
	border-radius: $tab-wrapper-border-radius;
}
.dj_ie6 .riaswTabPanel {
	overflow: hidden;
}
.riaswTabPanelNoLayout {
	width: 100%;
}
.riaswTabPanelTopChildWrapper,
.riaswTabPanelBottomChildWrapper,
.riaswTabPanelLeftChildWrapper,
.riaswTabPanelRightChildWrapper {
	position: absolute;///有 fx 存在，会 设置为 absolute
	margin: 0 !important;
	padding: 0 !important;
	border: 0 !important;
}

.riaswTabPane,///注意，不是 riaswTabPanel
.riaswStackPanel-child,
.riaswAccordionPanel-child {
	//border: none !important;
}

.nowrapTabStrip {
	width: auto;
	position: absolute;
}
.riaswTabListWrapper {
	overflow: hidden;
	z-index: 1;
}
.riaswTabSpacer {
	// display: none if !$tab-has-gutter;
	display: none;
}

.riaswTabController {
	z-index: 1;
}

.riaswTabPanelContainer {
	background: inherit;// $tab-wrapper-background-color;
	//border: 0px solid $tab-checked-border-color;// $tab-wrapper-border-color;
	border: none;
	margin: 0;
	padding: 0;
	border-radius: 0 0 $tab-wrapper-border-radius $tab-wrapper-border-radius;
	z-index: 1;
	overflow: visible !important;
}

// tab ======================== //
.riaswTab {
	font-size: 1.1em;
	cursor:pointer;
	white-space:nowrap;
	border: 1px solid $border-color;
	background-color: inherit;// $tab-background-color;
	text-align: center;
	transition-property: background, padding, margin;
	transition-duration: .1s;
	transition-timing-function: ease;
	position: relative;
	z-index: 0;
	if ($tab-checked-has-highlight-border) {
		&:before {
			content: "";
			display: block;
			position: absolute;
		}
	}
	* {
		vertical-align: middle;
	}
	.riaswTabLabel {
		/*min-height: 16px;*/
		display: inline-block;
	}
}
.riaswTabHover {
	background-color: $tab-hover-background-color;
}
.riaswTabActive {
	background-color: $tab-active-background-color;
}
.riaswTabChecked {
	cursor: default;
	border-color: $tab-checked-border-color;
	font-weight: bold;
	z-index: 1;
	&.riaswTabHover,
	&.riaswTabActive {
		//border: 2px solid $tab-checked-border-color;
		//background-color: $tab-checked-background-color;
		//color: $tab-checked-text-color;
	}
}
.riaswTabDisabled {
	opacity: $disabled-opacity;
}
div.riaswTabDisabled, .dj_ie div.riaswTabDisabled {
	cursor: auto;
}

.riaswTabCloseText {
	display:none;
}
.dj_a11y .riaswTabCloseText {
	display: inline;
}
.dj_ie6 .riaswTab .dijitNoIcon {
	display: inline;
	height: 15px;
	width: 1px;
}

.riaswTabCloseButton {
	_icon-core-style();
	width: $tab-close-button-icon-size;
	height: @width;
	line-height: @height;
	text-align: center;
	vertical-align: middle;
	//margin-left: $tab-padding * 2;
	//background: url(./images/CaptionPanelBtn.png) no-repeat -168px 0px;
	opacity: $tab-close-button-opacity;
	&:before {
		content: $tab-close-button-icon;
		font-size: $tab-close-button-font-size;
	}
}
.riaswTabCloseButtonHover {
	opacity: $tab-close-button-hover-opacity;
	background-color: gold;
}
.riaswTabCloseButtonActive {
	opacity: $tab-close-button-active-opacity;
	background-color: gold;
}
.dj_a11y .riaswTabCloseButton {
	background-image: none !important;
	width: auto !important;
	height: auto !important;
}

.riaswTabStripButton {
	z-index: 12;
	background-color: $tab-strip-button-background-color;
	border: 1px solid $tab-strip-button-border-color;
	transition-property: background-color;
	position: absolute;
	padding: $tab-padding;
}

/************ top、bottom、left、right ***********/
.riaswTabPanelContainer {
	z-index: 0;
	overflow: hidden;
}
.riaswTabController-top,
.riaswTabController-bottom,
.riaswTabController-left,
.riaswTabController-right {
	z-index: 1;
	overflow: visible !important;
	border: none;
}
.riaswTabController-top,
.riaswTabController-bottom {
	.riaswTab {
		height: 2em;
		line-height: 2em;
	}
	.riaswTabControllerContent {
		padding: 0 1em;
	}
}
.riaswTabController-left,
.riaswTabController-right {
