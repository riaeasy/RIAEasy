
/* CaptionPanel */

@import '../../variables';

.riaswCaptionPanel {
	overflow: hidden;
	position: relative;
	border: 0px solid lightgray;
}
.riaswFieldsetPanel {
	overflow: hidden;
	position: relative;
	border: 1px solid $border-color;
	border-radius: $border-radius * 2;
	margin: $margin * 2;
	///min-width: inherit;///改为在 FieldsetPanel 的 _setDomNodeSize 中处理。///很重要！部份浏览器默认设置了该值，导致不能调整 width。
}
.riaswFieldsetPanelNoCaptionNode .riaswFieldsetPanelCaptionNode {
	display: none;
}

.riaswCaptionPanelSelected,
.riaswCaptionPanelFocused {
	border-color: $selected-color;
}
.riaswFieldsetPanelSelected,
.riaswFieldsetPanelFocused {
	border-color: $selected-color;
}
.riaswCaptionPanelHover,
.riaswFieldsetPanelHover {
	border-color: $hover-color;
}

.riaswCaptionPanelContent,
.riaswFieldsetPanelContent {
	overflow: auto;
	position: relative;
	-webkit-overflow-scrolling: touch;
	padding: 0;
	margin: 0;
}
