// DialogPanel ======================== //

.riaswDialogPanel {
	display: block;
	position: absolute;
	background-color: $page-color;
	padding: 0px;
	margin:0;
	overflow: hidden;
	_shadow($shadow-dialog);
	border-width: 1px;
	border-color: $border-color;
	border-style: solid;
	border-radius: $border-radius * 2;
}
.riaswDialogPanelSelected,
.riaswDialogPanelFocused {
	border-color: $highlight-color;
}
.riaswDialogPanelHover,
.riaswDialogPanelActive {
	border-color: $hover-color;
}

.riaswDialogPanelMoveNode {
	display: block;
	border: 0px solid transparent;
	padding: 0;
	margin:0;
	overflow: hidden;
	cursor: move;
	position: relative;// !important;
	-webkit-overflow-scrolling: touch;
}
.riaswDialogPanelContent {
	background-color: $page-color;/*避免 wrapper 造成 transparent*/
	overflow: auto;
	position: relative;// !important;
	padding: 0;
	margin: $padding * 2;///保留 HiddenCaption 时的 margin
	-webkit-overflow-scrolling: touch;
}
